{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "QTMusic",
	"version": "0.2.5",
	"identifier": "top.rumble.qtmusic",
	"build": {
		"beforeDevCommand": "pnpm vdev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm vbuild",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "QTMusic",
				"width": 1050,
				"height": 590,
				"minWidth": 1050,
				"minHeight": 590,
				"decorations": false,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["nsis"],
		"licenseFile": "LICENSE.txt",
		"copyright": "Copyright Â© 2025 rumble",
		"windows": {
			"nsis": {
				"compression": "zlib",
				"displayLanguageSelector": true,
				"languages": ["English", "SimpChinese"],
				"installerIcon": "icons/icon.ico"
			}
		},
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": {
			"config.json": "config.json",
			"deviceid.txt": "deviceid.txt",
			"libs/libcrypto-3-x64.dll": "libcrypto-3-x64.dll",
			"libs/libssl-3-x64.dll": "libssl-3-x64.dll",
			"libs/vcruntime140.dll": "vcruntime140.dll",
			"LICENSE.txt": "LICENSE.txt"
		}
	}
}
